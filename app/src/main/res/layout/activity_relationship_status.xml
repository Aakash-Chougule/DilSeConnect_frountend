<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/Relationship_status_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".Activites.Relationship_status">
    <include layout="@layout/custom_toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="What'a Your \nRelationship Status?"
            android:textSize="30sp"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Relationship Status"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Status">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Relationship_status_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:drawableStart="@drawable/noun_relationship"
                    android:drawablePadding="12dp"
                    android:focusable="false"
                    android:clickable="false"
                    android:longClickable="false"
                    android:drawableEnd="@drawable/menu_down" />
            </com.google.android.material.textfield.TextInputLayout>
             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Relationship Goal"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Goal">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Relationship_goal_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:drawableStart="@drawable/noun_relationship"
                    android:drawablePadding="12dp"
                    android:focusable="false"
                    android:clickable="false"
                    android:longClickable="false"
                    android:drawableEnd="@drawable/menu_down" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:layout_margin="10dp"
            android:layout_gravity="end"
            android:textColor="@color/text_icon_color"
            android:backgroundTint="@color/accent_color"
            android:id="@+id/next_button_relationship_status" />
    </LinearLayout>

</LinearLayout>